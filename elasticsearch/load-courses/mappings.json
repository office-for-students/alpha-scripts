{
	"settings": {
		"index": {
			"number_of_replicas": 1,
			"number_of_shards": 5,
			"analysis": {
				"filter": {
					"autocomplete_filter": {
						"max_gram": 35,
						"min_gram": 1,
						"type": "edge_ngram"
					},
					"collapse_whitespace_filter": {
						"pattern": "\\s+",
						"replacement": " ",
						"type": "pattern_replace"
					},
					"course_name_synonym": {
						"type": "synonym",
						"synonyms": [
							"Maths,maths,Mathematics,mathematics",
							"Law,Legal,law,legal"
						]
					}
				},
				"analyzer": {
					"raw_analyzer": {
						"filter": [
							"lowercase",
							"collapse_whitespace_filter",
							"trim",
							"course_name_synonym"
						],
						"tokenizer": "whitespace",
						"type": "custom"
					}
				}
			}
		}
	},
	"mappings": {
